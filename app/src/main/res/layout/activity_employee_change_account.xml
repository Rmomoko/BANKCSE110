<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ac_info"

        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ac"
        android:fillViewport="false">

    </ScrollView>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="520dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Account Information"
            android:id="@+id/acInfoTitleView"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:footerDividersEnabled="true"
            android:divider="@color/teal"
            android:layout_weight="0.31" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/teal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Checking Account "
            android:id="@+id/checkingView"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/acInfoTitleView"
            android:layout_alignStart="@+id/acInfoTitleView"
            android:clickable="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/checkingNumber"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/teal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Saving Account "
            android:id="@+id/savingView"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/acInfoTitleView"
            android:layout_alignStart="@+id/acInfoTitleView"
            android:clickable="true"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/savingNumber"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/teal" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Credit Account"
            android:textColor="#FFFFFF"
            android:id="@+id/credit_button"
            android:layout_below="@+id/open_checking_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Debit Account"
            android:textColor="#FFFFFF"
            android:id="@+id/debit_button"
            android:layout_below="@+id/open_saving_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Apply Penalty To Checking"
            android:textColor="#FFFFFF"
            android:id="@+id/check_penalty_button"
            android:layout_below="@+id/open_saving_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Apply Penalty To Saving"
            android:textColor="#FFFFFF"
            android:id="@+id/save_penalty_button"
            android:layout_below="@+id/open_saving_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Apply Interest To Checking"
            android:textColor="#FFFFFF"
            android:id="@+id/check_interest_button"
            android:layout_below="@+id/open_saving_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Apply Interest To Saving"
            android:textColor="#FFFFFF"
            android:id="@+id/save_interest_button"
            android:layout_below="@+id/open_saving_button"
            android:layout_gravity="center"
            android:background="@color/teal"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    </LinearLayout>



</RelativeLayout>