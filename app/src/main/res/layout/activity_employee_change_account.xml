<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ac_info"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:id="@+id/acInfoTitleView"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_marginTop="80dp"
                android:footerDividersEnabled="true"
                android:divider="@color/teal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking Account "
                android:id="@+id/checkingView"
                android:textSize="20dp"
                android:layout_below="@+id/acInfoTitleView"
                android:layout_alignStart="@+id/acInfoTitleView"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkingNumber"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/acInfoTitleView"
                android:layout_alignStart="@+id/acInfoTitleView"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saving Account "
                android:id="@+id/savingView"
                android:textSize="20dp"
                android:layout_below="@+id/acInfoTitleView"
                android:layout_alignStart="@+id/acInfoTitleView"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/savingNumber"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/acInfoTitleView"
                android:layout_alignStart="@+id/acInfoTitleView"
                android:clickable="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Credit Account"
                android:textColor="#FFFFFF"
                android:id="@+id/credit_button"
                android:layout_below="@+id/open_checking_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Debit Account"
                android:textColor="#FFFFFF"
                android:id="@+id/debit_button"
                android:layout_below="@+id/open_saving_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Apply Penalty To Checking"
                android:textColor="#FFFFFF"
                android:id="@+id/check_penalty_button"
                android:layout_below="@+id/open_saving_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Apply Penalty To Saving"
                android:textColor="#FFFFFF"
                android:id="@+id/save_penalty_button"
                android:layout_below="@+id/open_saving_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Apply Interest To Checking"
                android:textColor="#FFFFFF"
                android:id="@+id/check_interest_button"
                android:layout_below="@+id/open_saving_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Apply Interest To Saving"
                android:textColor="#FFFFFF"
                android:id="@+id/save_interest_button"
                android:layout_below="@+id/open_saving_button"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>