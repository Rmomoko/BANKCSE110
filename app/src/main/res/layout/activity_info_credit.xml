<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/credit_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Account"
                android:layout_marginBottom="16dp"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center"></TextView>


            <EditText
                android:id="@+id/credit_amount"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:hint="$"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="6" />

            <Button
                android:id="@+id/checking_credit_button"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/teal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="deposit to checking"
                android:textStyle="bold" />



            <Button
                android:id="@+id/saving_credit_button"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/teal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="deposit to saving"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>