<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/cus_summary_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:weightSum="1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Checking Account Summary"
                android:textSize="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:footerDividersEnabled="true"
                android:divider="@color/teal"></TextView>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/teal" />

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:fillViewport="false">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_history"
                    android:text=""
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-light"
                    ></TextView>
            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Saving Account Summary"
                android:textSize="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:footerDividersEnabled="true"
                android:divider="@color/teal"></TextView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/teal" />

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_history"
                    android:text=""
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-light"></TextView>
            </ScrollView>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Print Summary"
                android:textColor="#FFFFFF"
                android:id="@+id/cus_summary_back"
                android:layout_gravity="center"
                android:background="@color/teal"
                style="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>