<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/credit_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer To Someone Account"
                android:layout_marginBottom="16dp"
                android:textSize="28dp"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center"></TextView>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/email"
                android:hint="Please type someone email"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textWebEmailAddress" />

            <EditText
                android:id="@+id/transfer_to_someone_amount"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:hint="$"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number" />

            <Button
                android:id="@+id/transfer_from_checking"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/teal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="From checking"
                android:textStyle="bold" />



            <Button
                android:id="@+id/transfer_from_saving"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/teal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="From saving"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>